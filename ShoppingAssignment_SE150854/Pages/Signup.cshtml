@page
@model ShoppingAssignment_SE150854.Pages.SignupModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper px-5 py-3">
    <div class="section-title my-3">
        <h2>Register Form</h2>
    </div>

    <form class="col-12 col-lg-6" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-12 col-lg-6">
                <label class="control-label" asp-for="CustomerEmail"></label>
                <input class="form-control" asp-for="CustomerEmail" />
            </div>
            <div class="form-group col-12 col-lg-6">
                <label class="control-label" asp-for="CustomerName"></label>
                <input class="form-control" asp-for="CustomerName" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12 col-lg-6">
                <label class="control-label">Address</label>
                <input class="form-control" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-lg-6">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Password" class="control-label"></label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Signup" class="btn btn-success col-6 col-lg-3" />
        </div>
    </form>
</div>

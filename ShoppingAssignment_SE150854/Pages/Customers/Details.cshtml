@page
@model ShoppingAssignment_SE150854.Pages.Customers.DetailsModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            contact name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.ContactName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            Phone number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
    </dl>
</div>

@if(HttpContextAccessor.HttpContext.Session.GetString("ROLE") == "Admin") {
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> 
}



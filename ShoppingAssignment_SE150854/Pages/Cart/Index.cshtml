@page
@model ShoppingAssignment_SE150854.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Cart";
}

@if (Model.Cart != null)
{
    <table class="table table-striped table-bordered mydatatable">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Cart)
            {
                <tr>
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                    <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Index" asp-route-id="@item.ProductId" asp-page-handler="Increase">+</a> |
                        <a class="btn btn-primary" asp-page="./Index" asp-route-id="@item.ProductId" asp-page-handler="Decrease">-</a>
                        <button class="btn btn-danger" type="submit">Remove</button>
                    </td>
                    </form>
                </tr>
            }
        </tbody>
    </table>
    <div> 
        <a class="btn btn-success" asp-page="./Checkout">Checkout</a>
    </div>

}
else
{
    <h1>The cart is empty</h1>
}


<script type="text/javascript">
    window.onload = function() {
        if ('@TempData["Message"]' != "") {
            alert('@TempData["Message"]');
        }
    };
</script>
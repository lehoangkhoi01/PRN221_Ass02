@page
@model ShoppingAssignment_SE150854.Pages.Cart.CheckoutModel
@{
    ViewData["Title"] = "Checkout page";
}

@if (Model.Cart != null)
{
    <table class="table table-striped table-bordered mydatatable">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Cart)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td>Total: @Model.TotalPrice.ToString("0.00")</td>
            </tr>
        </tbody>
    </table>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ShippingAddress" class="control-label"></label>
             <input asp-for="ShippingAddress" class="form-control" />
             <span asp-validation-for="ShippingAddress" class="text-danger"></span>        
         </div>
         <input asp-for="TotalPrice" type="hidden"/>
        <button type="submit" class="btn btn-success">Complete order</button>
    </form>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    window.onload = function() {
        if ('@TempData["Message"]' != "") {
            alert('@TempData["Message"]');
        }
    };
</script>


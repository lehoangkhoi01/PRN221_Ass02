@page
@model ShoppingAssignment_SE150854.Pages.Orders.EditModel
@{
    ViewData["Title"] = "Edit";
}


<h1>Edit</h1>

<h4>Order</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <input type="hidden" asp-for="Order.CustomerId"/>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Order.Customer.Email" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label class="control-label">Shipping Address</label>
                <input asp-for="Order.ShipAddress" 
                        readonly class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Freight</label>
                <input asp-for="Order.Freight" 
                        readonly class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Ordered Date</label>
                <input asp-for="Order.OrderDate" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label class="control-label">Required Date</label>
                <input asp-for="Order.RequiredDate" class="form-control" />
                <span asp-validation-for="Order.RequiredDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Shipped Date</label>
                <input asp-for="Order.ShippedDate" class="form-control" />
                <span asp-validation-for="Order.ShipAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./OrderHistory">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

    <script type="text/javascript">
        window.onload = function() {
            if ('@TempData["Message"]' != "") {
                alert('@TempData["Message"]');
            }
        };
    </script>
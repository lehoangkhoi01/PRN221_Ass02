@page
@model ShoppingAssignment_SE150854.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderId)
        </dd>

        <dt class="col-sm-2">
            Shipping Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShipAddress)
        </dd>

        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>

        <dt class="col-sm-2">
            Shipped Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippedDate)
        </dd>

        <dt class="col-sm-2">
            Required Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.RequiredDate)
        </dd>

        <dt class="col-sm-2">
            Freigh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Freight)
        </dd>

        <dt class="col-sm-2">
            Customer Email
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/Customers/Details" asp-route-id="@Model.Order.Customer.CustomerId">
                @Html.DisplayFor(model => model.Order.Customer.Email)
            </a>          
        </dd>
    </dl>

    <table class="table table-striped table-bordered mydatatable">
        <thead>
            <tr>
                <th>
                    Product
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Unit Price
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Order.OrderDetails)
            {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>